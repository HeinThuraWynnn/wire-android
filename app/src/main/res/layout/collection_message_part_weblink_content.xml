<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/collections__item_view_height"
    android:orientation="vertical"
    android:padding="@dimen/wire__padding__12"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__collection_item__user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/wire__text_size__small"
            app:font="@string/wire__typeface__regular"
            />

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__collection_item__time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/wire__text_size__small"
            app:font="@string/wire__typeface__light"
            android:textColor="?wireSecondaryTextColor"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/wire__padding__2"
        android:clipChildren="false"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            >

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/ttv__row_conversation__link_preview__title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wire__padding__2"
                android:layout_marginRight="@dimen/wire__padding__8"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="left"
                android:textSize="@dimen/wire__text_size__regular"
                app:font="@string/wire__typeface__light"
                style="?colorPrimary"
                />

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/ttv__row_conversation__link_preview__url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wire__padding__4"
                android:layout_marginRight="@dimen/wire__padding__8"
                android:ellipsize="middle"
                android:maxLines="1"
                android:gravity="left"
                android:textSize="@dimen/wire__text_size__small"
                android:textColor="@color/wire__text_color_secondary_light_selector"
                app:font="@string/wire__typeface__regular"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv__row_conversation__link_preview__image"
            android:layout_width="@dimen/collections__web_preview_image_size"
            android:layout_height="@dimen/collections__web_preview_image_size"
            android:layout_gravity="center_vertical"
            />

        </LinearLayout>

</LinearLayout>
